<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
	fx:controller="controller.DoctorController" prefWidth="500"
	prefHeight="450" style="-fx-background-color: #e0f0ff;">
	<VBox spacing="10" alignment="TOP_CENTER"
		AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
		AnchorPane.rightAnchor="10">
		<Label text="Doctor Management"
			style="-fx-font-size: 18px; -fx-font-weight: bold;" />

		<HBox spacing="10" alignment="CENTER">
			<Label text="Name:" />
			<TextField fx:id="nameField" prefWidth="200" />
		</HBox>

		<HBox spacing="10" alignment="CENTER">
			<Label text="Phone:" />
			<TextField fx:id="phoneField" prefWidth="200" />
		</HBox>

		<HBox spacing="10" alignment="CENTER">
			<Label text="CRM:" />
			<TextField fx:id="credentialField" prefWidth="200" />
		</HBox>

		<Label text="Registered Doctors:" style="-fx-font-weight: bold;" />
		<ListView fx:id="doctorList" prefHeight="150" />
	</VBox>
</AnchorPane>
